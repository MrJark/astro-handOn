---
import AsideMenu from "../components/AsideMenu.astro";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div id="app" class="relative h-screen p-2 gap-2">
			<aside
				class="[grid-area:aside] flex flex-col overflow-y-auto bg-blue-200"
			>
				<AsideMenu />
			</aside>
			<main class="[grid-area:main] bg-zinc-900 rounded-lg overflow-y-auto">
				MAIN
			</main>
			<footer
				class="[grid-area:player] min-h-[100px] bg-blue-500 rounded-lg overflow-y-auto"
			>
				Player
			</footer>
			<slot />
		</div>
	</body>
</html>
<style>
	#app {
		display: grid;
		grid-template-areas:
			"aside main main"
			"player player player";
		grid-template-columns: 350px 1f;
		grid-template-columns: 1f auto;
	}
</style>
<style is:global>
	html {
		font-family: system-ui, sans-serif;
		background: #000000;
		background-size: 224px;
	}
</style>
