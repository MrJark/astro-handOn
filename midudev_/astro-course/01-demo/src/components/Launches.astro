import { type APISpaceXResponse } from '../types/api'
import CardLaunch from './CardLaunch.astro';
const res = await fetch('https://api.spacexdata.com/v5/launches/query', {
    method: "POST",
    headers: {
        "Content-Type": "application/json",
    },
    body: JSON.stringify({
        query: {},
        options: {
            sort: {
                date_unix: 'asc'
            },
            limit: 12,
        },
    })
}) // este c√≥digo es de javascript. Todo nativo, nada raro üòë
// const data = JSON.stringify(await res.json()) // he tenido que hacerlo un string para poder copiarlo y mandarlo al quicktype
const data = await res.json() as APISpaceXResponse
const { docs: launches } = data; // cambio de nombre

