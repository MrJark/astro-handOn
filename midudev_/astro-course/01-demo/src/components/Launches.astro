---
// aquí puedes ejecutar el js que quieras, incluio el fetching
import CardLaunch from './CardLaunch.astro';
// He mandado el código a un archivo .ts por simplificar
import {getLatestLaunches} from '../services/spaceX'

const launches = await getLatestLaunches()
---

<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
    { // esto NO ES JSX. No necesita las keys
        launches.map( launch => ( // se puede simplificar si hacemos la desestructuración
            <CardLaunch 
                id={launch.id}
                img={launch.links.patch.small}
                details={launch.details}
                flightNumber={launch.flight_number}
                success={launch.success}
            />
        ))
    }
</div>